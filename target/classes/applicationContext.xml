    <bean id="ListPlayerBean" class="ru.irina.spring.Player">
        <constructor-arg>
            <list>
                <ref bean="rockMusicBean"/>
                <ref bean="classicalMusicBean"/>
                <ref bean="BlackMusicBean"/>
            </list>
        </constructor-arg>
    </bean>
